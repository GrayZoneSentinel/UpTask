extends layout

block contenido
    //- h1 #{nombrePagina}
    .contenido-principal
        h1 Crear un nuevo proyecto

        form.agregar-proyecto(action="/nuevo-proyecto" method="POST")
            .campo
                label(for="nombre") Nombre proyecto
                input(type="text" id="nombre" name="nombre" placeholder="Inserta el nombre del proyecto")
            .campo.enviar
                input(type="submit" value="Agregar" class="boton")
