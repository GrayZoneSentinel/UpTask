mixin crearProyecto(proyecto = {})
    form.agregar-proyecto(action=`/nuevo-proyecto/${proyecto.id || ''}` method="POST")
        .campo
            label(for="nombre") Nombre proyecto:
            input(type="text" id="nombre" value=proyecto.nombre name="nombre" placeholder="Nombre proyecto")
        .campo.enviar
            input(type="submit" value=`${proyecto.nombre ? 'Editar nombre' : 'Crear proyecto'}` class="boton")
